<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.USE_CREDENTIAL_MANAGER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".ui.theme.App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyProjectInAndroid">

        <activity
            android:name=".ui.theme.view.FirstScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.theme.view.MoviesDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.theme.view.MoviesActivity"
            android:exported="false" />
        <activity
            android:name=".ui.theme.view.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyProjectInAndroid" />

    </application>

</manifest>